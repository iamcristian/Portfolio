---
interface Props {
  color?: "gray";
  children: string;
}

const { color = "gray", children } = Astro.props;
const colors = {
  gray: "bg-gray-100 text-gray-800",
  blue: "bg-blue-100 text-blue-800",
  green: "bg-green-100 text-green-800",
  red: "bg-red-100 text-red-800",
};
---

<span class={`text-xs px-2 py-0.5 rounded-full font-medium ${colors[color]}`}>
  {children}
</span>
