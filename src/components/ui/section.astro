---
interface Props {
  id: string;
  title?: string;
}
const { id, title } = Astro.props as Props;
---

<section id={id} class="mx-auto py-18 px-4 md:px-8 lg:px-16">
  {
    title && (
      <h2 class="text-2xl md:text-3xl font-bold text-center tracking-tight mb-6">
        {title}
      </h2>
    )
  }

  <slot />
</section>
