---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { Image } from "astro:assets";
import meImage from "@/assets/me.webp";
import Section from "../ui/Section.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const about = t("about");
---

<Section id="about">
  <div
    class="lg:px-32 grid grid-cols-1 lg:grid-cols-3 lg:gap-16 items-center justify-items-center space-y-2"
  >
    <div class="space-y-6 lg:col-span-2 max-w-full">
      <h2 class="text-2xl md:text-3xl font-bold tracking-tight">
        {about.title}
      </h2>
      <p class="text-sm">{about.paragraph1}</p>
      <p class="text-sm">{about.paragraph2}</p>
      <p class="text-sm">{about.paragraph3}</p>
      <div class="stats shadow flex justify-center text-center">
        {
          about.stats.map((stat) => (
            <div class="stat">
              <div class="stat-value">{stat.number}</div>
              <div class="stat-title">{stat.title}</div>
            </div>
          ))
        }
      </div>
    </div>
    <div class="flex justify-center w-full">
      <Image
        src={meImage}
        alt={about.title}
        class="w-1/2 lg:w-full rounded-2xl shadow-lg"
        loading="lazy"
        width={600}
        height={600}
      />
    </div>
  </div>
</Section>
