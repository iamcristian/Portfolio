---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

import type { SkillsData } from "@/types";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { title, skillCategories } = t("skills") as SkillsData;
---

<section id="skills" class="mx-auto py-16">
  <h2 class="text-2xl md:text-3xl font-bold text-center tracking-tight mb-6">
    {title}
  </h2>

  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-6 lg:gap-8">
    {
      skillCategories.map((category) => (
        <div class="space-y-3">
          <div class="flex items-center space-x-2">
            <h3 class="text-md font-bold uppercase">{category.title}</h3>
          </div>
          <div class="space-y-1.5">
            {category.skills.map((skill) => (
              <div class="text-sm">{skill}</div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
